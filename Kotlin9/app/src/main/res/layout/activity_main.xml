<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ProgressBar
        android:id="@+id/progressBAR"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
	app:layout_constraintBottom_toBottomOf="@id/nasa_image"
	app:layout_constraintLeft_toLeftOf="@id/nasa_image"
	app:layout_constraintRight_toRightOf="@id/nasa_image"
	app:layout_constraintTop_toTopOf="@id/nasa_image"
        android:visibility="gone"/>
    <ImageView
        android:id="@+id/nasa_image"
        android:layout_width="100dp"
	android:layout_height="100dp"
	android:padding="5dp"
	app:layout_constraintBottom_toTopOf="@id/nasa_image2"
        app:layout_constraintLeft_toLeftOf="parent"
	app:layout_constraintRight_toLeftOf="@id/nasa_image1"
        app:layout_constraintTop_toTopOf="parent"
        android:contentDescription="nasa_photo"/>

    <ProgressBar
        android:id="@+id/progressBAR1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
	app:layout_constraintBottom_toBottomOf="@id/nasa_image1"
	app:layout_constraintLeft_toLeftOf="@id/nasa_image1"
	app:layout_constraintRight_toRightOf="@id/nasa_image1"
	app:layout_constraintTop_toTopOf="@id/nasa_image1"
        android:visibility="gone"/>
    <ImageView
        android:id="@+id/nasa_image1"
        android:layout_width="100dp"
	android:layout_height="100dp"
	android:padding="5dp"
	app:layout_constraintBottom_toTopOf="@id/nasa_image3"
	app:layout_constraintLeft_toRightOf="@id/nasa_image"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:contentDescription="nasa_photo"/>

    <ProgressBar
        android:id="@+id/progressBAR2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
	app:layout_constraintBottom_toBottomOf="@id/nasa_image2"
	app:layout_constraintLeft_toLeftOf="@id/nasa_image2"
	app:layout_constraintRight_toRightOf="@id/nasa_image2"
	app:layout_constraintTop_toTopOf="@id/nasa_image2"
        android:visibility="gone"/>
    <ImageView
        android:id="@+id/nasa_image2"
        android:layout_width="100dp"
	android:layout_height="100dp"
	android:padding="5dp"
	app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
	app:layout_constraintRight_toLeftOf="@id/nasa_image3"
	app:layout_constraintTop_toBottomOf="@id/nasa_image"
        android:contentDescription="nasa_photo"/>

    <ProgressBar
        android:id="@+id/progressBAR3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
	app:layout_constraintBottom_toBottomOf="@id/nasa_image3"
	app:layout_constraintLeft_toLeftOf="@id/nasa_image3"
	app:layout_constraintRight_toRightOf="@id/nasa_image3"
	app:layout_constraintTop_toTopOf="@id/nasa_image3"
        android:visibility="gone"/>

    <ImageView
        android:id="@+id/nasa_image3"
        android:layout_width="100dp"
	android:layout_height="100dp"
	android:padding="5dp"
	app:layout_constraintBottom_toBottomOf="parent"
	app:layout_constraintLeft_toRightOf="@id/nasa_image2"
        app:layout_constraintRight_toRightOf="parent"
	app:layout_constraintTop_toBottomOf="@id/nasa_image1"
        android:contentDescription="nasa_photo"/>

   <Button
	android:id="@+id/boton"
	android:text="Check"
        android:layout_width="wrap_content"
	android:layout_height="wrap_content"
	app:layout_constraintTop_toTopOf="parent"
	app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
	app:layout_constraintBottom_toBottomOf="parent"
	/>

</androidx.constraintlayout.widget.ConstraintLayout>
